<main id="main-container" class="grid lg:grid-cols-12">
    <div id="comments-container" class="lg:col-start-3 lg:col-end-9">
        <nav class="comments-nav py-6">
            <div class="comments-nav__title">
                <i class="comments-icon fas fa-comment-alt"></i>
                <h2 class="comments-nav__title__text">
                    {{comments.length}} comments
                </h2>
            </div>
            <div class="comments-nav__sort float-right">
                <span>Sort</span>
                <button class="likes" aria-label="Sort by likes"
                    onclick="ui.sortCommentsByLikes(JSON.parse(document.getElementsByClassName(`comments-list`)[0].getAttribute(`data-comments`)))">Likes</button>
                <button class="newest" aria-label="Sort by date"
                    onclick="ui.sortCommentsByDate(JSON.parse(document.getElementsByClassName(`comments-list`)[0].getAttribute(`data-comments`)))">Newest</button>
            </div>
        </nav>
        {{#if comments}}
        <ul class="comments-list" data-comments="{{json comments}}">
            {{#each comments}}
            <li id='comment_user_{{this.id}}' class='comment_user sm:px-1 py-4'>
                <div class='comment_details float-left w-full'>
                    <h3 class='comment_user_name'>
                        {{this.name}}
                        <span class='comment_date ml-4 text-xs'>{{dateFormat this.date}}</span>
                        <span class='comment_likes float-right'>{{this.likes}} likes</span>
                    </h3>
                    <p class='comment_text'>
                        {{this.body}}
                    </p>
                </div>
            </li>
            {{/each}}
        </ul>
        {{/if}}
    </div>
</main>